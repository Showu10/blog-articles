<!DOCTYPE html>
<html lang="en">
<head>  
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>Blog</title>
</head>
<body>
    <div class="container">
        <h1 class="mb-4">Blog Articles</h1>
        <a href="/" class="btn btn-secondary">Home Page</a>
        <a href="/article/create" class="btn btn-success">Create New Article</a>
        <% articles.forEach(article => { %>
            <div class="card mt-4">
                <div class="card-body">
                    <h4 class="card-title"><%= article.article %></h4>
                    <div class="card-subtitle text-muted mb-2">
                        Posted by:
                        <%= article.posted_by %>                        <br>
                        Posted:
                        <%= article.posted_at.toLocaleDateString() + " " + article.posted_at.getHours() + ":" +  article.posted_at.getMinutes() %>
                        <br>
                        Last Updated:
                        <%= article.last_updated_at.toLocaleDateString() + " " + article.last_updated_at.getHours() + ":" +  article.last_updated_at.getMinutes() %>
                    </div>
                    <div class="card-text mb-2">
                        <%= article.description %>
                    </div>
                    <a href="/article/<%= article.id %>" class="btn btn-primary">View</a>
                </div>
            </div>
        <% }) %>
    </div>
</body>
</html>